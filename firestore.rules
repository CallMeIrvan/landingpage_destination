rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isActive == true;
    }

    // Admins collection
    match /admins/{userId} {
      // User can read their own data (to check role), admins can read all
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Only existing admins can create/update/delete other admins
      // NOTE: The first admin must be created manually in Firebase Console
      allow write: if isAdmin();
    }

    // Tour Orders collection
    match /tourOrders/{orderId} {
      // Anyone can create an order (public booking form)
      allow create: if true;
      
      // Only admins can read (dashboard), update (status), or delete orders
      allow read, update, delete: if isAdmin();
    }
  }
}
